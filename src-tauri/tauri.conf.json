{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "beijing-bus-transfer-system",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$RESOURCE/bus-data/*"]
      },
      "window": {
        "minimize": true
      }
    },
    "windows": [
      {
        "title": "北京公交换乘系统 by: @CakeAL",
        "width": 800,
        "height": 600,
        "minHeight": 600,
        "minWidth": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "beijing.bus.transfer.system",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../bus-data/*"]
    }
  }
}
